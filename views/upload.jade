extends layout

block content
  .container
    .col-sm-6.col-sm-offset-3
      h1
        span.fa.fa-sign-in
        |  Add Picture

      // sign up form
      form(action='/upload', method='post', enctype='multipart/form-data')
        .form-group
          label URL
          input.form-control(type='radio', name='storage', value='link', checked)
          input.form-control(type='text', name='url')
        .form-group
          label File
          input.form-control(type='radio', name='storage', value='file')
          input.form-control(type='file', name='pictureFiles' multiple)
        button.btn.btn-warning.btn-lg(type='submit') Upload

      hr

      p:a(href='/') home
